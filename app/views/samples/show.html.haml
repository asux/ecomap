- title "Sample: #{@sample}"

.action_links
  = link_to t(:edit_link), edit_sample_path(@sample)
  \|
  = link_to t(:back_link), samples_path

= render 'shared/load_placemarks'
= render 'shared/yandex_map'

.attribute
  %strong= "#{Sample.human_attribute_name 'kind'}:"
  = @sample.kind_instance.human_name
.attribute
  %strong= "#{Sample.human_attribute_name 'object_name'}:"
  = @sample.object_name
.attribute
  %strong= "#{Sample.human_attribute_name 'lng'}:"
  = @sample.lng
.attribute
  %strong= "#{Sample.human_attribute_name 'lat'}:"
  = @sample.lat
.attribute
  %strong= "#{Sample.human_attribute_name 'owner'}:"
  = @sample.owner
.attribute
  %strong= "#{Sample.human_attribute_name 'description'}:"
  = @sample.description


