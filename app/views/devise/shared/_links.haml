- if controller_name != 'sessions'
  = link_to t('devise.sign_in', :default => "Sign in"), new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t('devise.sign_up', :default => "Sign up"), new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t('devise.forgot', :default => "Forgot your password?"), new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to t('devise.no_confirmation', :default => "Didn't receive confirmation instructions?"), new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to t('devise.no_unlock', :default => "Didn't receive unlock instructions?"), new_unlock_path(resource_name)
  %br/
