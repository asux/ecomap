<?xml version="1.0" encoding="utf-8"?>
<ymaps:ymaps xmlns:ymaps="http://maps.yandex.ru/ymaps/1.x"
  xmlns:gml="http://www.opengis.net/gml"
  xmlns:repr="http://maps.yandex.ru/representation/1.x"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maps.yandex.ru/schemas/ymaps/1.x/ymaps.xsd">
  <repr:Representation>
    <repr:Style gml:id="customStyle">
      <repr:parentStyle>default#greenPoint</repr:parentStyle>
      <repr:balloonContentStyle>
        <repr:template>#customTemplate</repr:template>
      </repr:balloonContentStyle>
    </repr:Style>

    <repr:Template gml:id="customTemplate">
      <repr:text><![CDATA[<div style="color:green">$[description]</div><br/><a href="#!/samples/$[metaDataProperty.AnyMetaData.sampleId]">Go</a>]]></repr:text>
    </repr:Template>
  </repr:Representation>

  <ymaps:GeoObjectCollection>
    <ymaps:style>#customStyle</ymaps:style>
      <gml:featureMember>
        <ymaps:GeoObject>
          <gml:metaDataProperty>
            <AnyMetaData>
              <sampleId>1</sampleId>
              <link>http://ecomap.heroku.com/samples/1</link>
            </AnyMetaData>
          </gml:metaDataProperty>
          <gml:description>пр. Григоренко 15</gml:description>
          <gml:Point>
            <gml:pos>30.62920957803727 50.40988188370294</gml:pos>
          </gml:Point>
        </ymaps:GeoObject>
      </gml:featureMember>
    </ymaps:GeoObjectCollection>
</ymaps:ymaps>
